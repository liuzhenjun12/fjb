<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fjb.system.mapper.TiDanxuanMapper">

    <resultMap type="TiDanxuan" id="TiDanxuanResult">
        <result property="id"    column="id"    />
        <result property="level"    column="level"    />
        <result property="title"    column="title"    />
        <result property="answer"    column="answer"    />
        <result property="jiexi"    column="jiexi"    />
        <result property="titlepic"    column="titlepic"    />
        <result property="status"    column="status"    />
        <result property="qtype"    column="qtype"    />
        <result property="qcategory"    column="qcategory"    />
        <result property="createBy"           column="create_by"             />
        <result property="createTime"         column="create_time"           />
        <result property="updateBy"           column="update_by"             />
        <result property="updateTime"         column="update_time"           />
        <result property="remark"             column="remark"                />
        <collection  property="ans"   javaType="java.util.List"        resultMap="TiDanxuanAnResult" />
    </resultMap>

    <resultMap type="TiDanxuanAn" id="TiDanxuanAnResult">
        <result property="id"    column="id"    />
        <result property="qid"    column="qid"    />
        <result property="qind"    column="qind"    />
        <result property="qdetail"    column="qdetail"    />
        <result property="qpic"    column="qpic"    />
    </resultMap>

    <sql id="selectTiDanxuanVo">
        select id, level, title, answer, jiexi, titlepic, status, qtype, qcategory,remark from ti_danxuan
    </sql>

    <select id="selectTiDanxuanList" parameterType="TiDanxuan" resultMap="TiDanxuanResult">
        <include refid="selectTiDanxuanVo"/>
        <where>
            <if test="level != null "> and level = #{level}</if>
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="answer != null  and answer != ''"> and answer = #{answer}</if>
            <if test="jiexi != null  and jiexi != ''"> and jiexi = #{jiexi}</if>
            <if test="titlepic != null  and titlepic != ''"> and titlepic = #{titlepic}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="qtype != null "> and qtype = #{qtype}</if>
            <if test="qcategory != null "> and qcategory = #{qcategory}</if>
        </where>
    </select>

    <select id="selectTiDanxuanById" parameterType="Long" resultMap="TiDanxuanResult">
        <include refid="selectTiDanxuanVo"/>
        where id = #{id}
    </select>

    <insert id="insertTiDanxuan" parameterType="TiDanxuan" useGeneratedKeys="true" keyProperty="id">
        insert into ti_danxuan
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="level != null">level,</if>
            <if test="title != null">title,</if>
            <if test="answer != null">answer,</if>
            <if test="jiexi != null">jiexi,</if>
            <if test="titlepic != null">titlepic,</if>
            <if test="status != null">status,</if>
            <if test="qtype != null">qtype,</if>
            <if test="qcategory != null">qcategory,</if>
            <if test="remark != null and remark != ''">remark,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            create_time
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="level != null">#{level},</if>
            <if test="title != null">#{title},</if>
            <if test="answer != null">#{answer},</if>
            <if test="jiexi != null">#{jiexi},</if>
            <if test="titlepic != null">#{titlepic},</if>
            <if test="status != null">#{status},</if>
            <if test="qtype != null">#{qtype},</if>
            <if test="qcategory != null">#{qcategory},</if>
            <if test="remark != null and remark != ''">#{remark},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            sysdate()
         </trim>
    </insert>

    <update id="updateTiDanxuan" parameterType="TiDanxuan">
        update ti_danxuan
        <trim prefix="SET" suffixOverrides=",">
            <if test="level != null">level = #{level},</if>
            <if test="title != null">title = #{title},</if>
            <if test="answer != null">answer = #{answer},</if>
            <if test="jiexi != null">jiexi = #{jiexi},</if>
            <if test="titlepic != null">titlepic = #{titlepic},</if>
            <if test="status != null">status = #{status},</if>
            <if test="qtype != null">qtype = #{qtype},</if>
            <if test="qcategory != null">qcategory = #{qcategory},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            update_time = sysdate()
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTiDanxuanById" parameterType="Long">
        delete from ti_danxuan where id = #{id}
    </delete>

    <delete id="deleteTiDanxuanByIds" parameterType="String">
        delete from ti_danxuan where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>
